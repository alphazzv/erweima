
.cart-box{
    padding-bottom: 100rpx;
}
.cart-list{
    position: relative;
    padding: 20rpx 20rpx 20rpx 285rpx;
    height: 185rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.cart-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 90rpx;
    width: 45rpx;
    height: 45rpx;
}
.prohibit{
    background: #E5E5E5 !important;
  }
.right{
    flex: 1 0 30%;
    background: #ff5f19;
    font-size: 17px;
    color: #FFFFFF;
    text-align: center;
    line-height: 10vh;
  }
.cart-list .cart-thumb{
    position: absolute;
    top: 20rpx;
    left: 85rpx;
    width: 185rpx;
    height: 185rpx;
}
.cart-list .cart-pro-name{
    display: flex;
    width: 300rpx;
    height: 105rpx;
    line-height: 50rpx;
    overflow: hidden;
    align-items: center;
}
.cart-list .cart-pro-price{
    display: inline-block;
    height: 105rpx;
    line-height: 50rpx;
    color:#ff5f19;
}
.cart-list .cart-count-box{
    position: absolute;
    left: 285;
    bottom: 20rpx;
    width: 250rpx;
    height: 80rpx;
}
.cart-list .cart-count-box text{
    display: inline-block;
    line-height: 80rpx;
    text-align: center;
}
.cart-count-down{
    width: 50rpx;
    height:100%;

    font-size: 44rpx;
    color: black;
    line-height: 42rpx;
    border-radius: 46rpx;
    font-weight: bold;
    border:1rpx solid rgb(116, 115, 115);
}
.cart-count-add{
    width: 50rpx;
    height:100%;
    font-size: 44rpx;
    color: #fff;
    line-height: 42rpx;
    background: linear-gradient(to right, #ff3456, #ff347d);
    border-radius: 46rpx;
    font-weight: bold;
    border:1rpx solid linear-gradient(to right, #ff3456, #ff347d);
}
.cart-count-num{
    width:100rpx;
}
.cart-del{
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 44rpx;
}
.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 100rpx 0 80rpx;
    box-sizing: border-box;
    background: #ffcc00;
    color: #fff;
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon{
    position: absolute;
    right: 40rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon image,.order-icon navigator{
  display: block;
  width: 45rpx;
  height: 45rpx;
}
.cart-toatl-price{
    float: right;
    width: 80rpx;

}
.cart-pay{
    float: right;
    text-align: center;
    width: 200rpx;
}
.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}
