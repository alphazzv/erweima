<view class="container">
<scroll-view class="scroll" scroll-y="true">
  <view wx:for="{{addresses}}">
    <view class="product-name-wrap">
      <view class="ui-list-item-info">{{item.name}}
        <text decode="{{true}}" space="{{true}}">&nbsp;&nbsp;</text> {{item.phone}}
      </view>
      <view class="ui-list-item-address">
        {{item.address}}
      </view>
      <view class="ui-list-item-time">
        <p>{{item.detailInfo}}</p>
        <p class="ui-list-item-del" data-id="{{index}}" bindtap="delAddress">删除</p>
      </view>
      <view class="separate"></view>
    </view>
  </view>
</scroll-view>
    <view class="bun-wrap" bindtap="wxaddress">
        <view class="bun">添加收货地址</view>
    </view>
</view>